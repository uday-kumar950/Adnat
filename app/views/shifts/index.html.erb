<div class="container">
<%if @shifts.present?%>
  <div class="row">
    <%= form_tag filter_data_shifts_path,remote: true,class: "form-inline" do |form| %>
    <div class="form-group">
      <%= label_tag :name %>
      <%= select_tag :name, options_from_collection_for_select(@emp_names, "id", "name"), prompt: "Select Employee",class: "form-control" %>
    </div>
     <div class="form-group">
      <%= label_tag :start_date %>
      <%= date_field_tag :start_date ,class: "form-control", min: Date.today - 1.year,max: Date.today%>
      </div>
     <div class="form-group">
      <%= label_tag :end_date %>
      <%= date_field_tag :end_date ,class: "form-control", min: Date.today - 1.year,max: Date.today%>
     </div> 
    <div class="form-group">
      <%= submit_tag "Filter",class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
<% end %>

<h3 class="text-center">Shifts</h3>

<div class="text-center" id="show_shifts">  
  <%= render "index"%>
</div>

<%= link_to 'Back', organisation_path(current_user.organisation) %>

</div>
